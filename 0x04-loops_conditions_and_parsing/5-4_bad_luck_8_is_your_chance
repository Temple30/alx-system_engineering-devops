#!/usr/bin/env bash
# This script loops from 1 to 10 and displays messages based on the loop iteration

# Initialize counter
counter=0

# Loop while counter is less than or equal to 10
while [ $counter -lt 10 ]; do
    # Increment counter
    ((counter++))

    # Check the loop iteration and display messages accordingly
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
done
